@model List<Category>
@{
    ViewBag.Title = "Kategoriler";
}
<table class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Description</th>
            <th>Product Count</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var current = Model[i];
            <tr>
                <th>@(i + 1)</th>
                <td>@current.CategoryName</td>
                <td>@current.Description</td>
                <td>@current.Products.Count</td>
                <td>
                    <a href="@Url.Action("Detail", "Category", new {id = current.CategoryID})" class="btn btn-success">
                        Detail
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>